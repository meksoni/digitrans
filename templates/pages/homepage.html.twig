            <!--Pricing card background-->
            <div class="position-absolute start-0 top-0 w-100 h-100 bg-white rounded-3"></div>
         <div class="position-relative z-index-1">
          <!--Plan type-->
          <h5>Cena pojedinačne karte</h5>
          <!--Plan price-->
          <div class="d-flex mb-5">
          <h1 class="display-2 mb-0 price text-secondary" data-as-monthly="3000" data-as-annual="7000">7000</h1>
          <small class="fs-2 align-self-end text-secondary">rsd</small>
          </div>
          
          <!--Plan features list-->
          
            <!--Plan action button-->
            <div class="d-grid mb-3">
            {% if app.request.get('send') == 'true' %}
            <a href="#sponzorski-paketi" class="btn btn-sm btn-success">Postanite sponzor</a>
            {% else %}
            <a href="#rezervacija" data-bs-toggle="modal" aria-expanded="false" class="btn btn-sm btn-secondary">Rezervacija</a>
            {% endif %}
            </div>
            <!--Plan info text-->
            <p class="mb-0 small text-dark"><strong>Postanite sponzor</strong> ove konferencije. <br>
            <a href="#sponzorski-paketi" class="link-decoration text-dark">Sponzorski paketi</a>
           </p>
       </div>

     </div>
    </div>
   </div>
  </div>

  <div class="modal fade" id="rezervacija" tabindex="-1" aria-labelledby="modalBasicLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content border-0">
                    <div class="modal-header border-0 bg-light">
                        <h5 class="modal-title">Rezervacija karte | DigiTrans Konferencija</h5>
                        <!--Close button-->
                        <button type="button"
                            class="btn btn-outline-secondary p-0 border-2 width-3x height-3x  rounded-circle z-index-1"
