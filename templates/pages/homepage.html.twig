        <div class="row mb-7 mb-lg-9">
            <div class="col-lg-10 col-xl-8 mx-auto text-center" data-aos="fade-up" data-aos-duration="700">
                <h2 class="display-5 text-gradient">DiGiTRANS PREDAVAČI NOVI SAD 2023</h2>
            </div>
        </div>
        <div class="row">

        {% for speaker in content.speakers %}
            <div class="col-lg-3 mb-7 mt-auto text-center" data-aos="fade-up" data-aos-delay="100"
                data-aos-duration="700">
               
                {% if speaker.excerptImages|length > 0 %}
                <div class="position-relative mb-4 overflow-hidden width-15x height-15x mx-auto rounded-circle">
                    <a href="{{ sulu_content_path(speaker.url) }}">
                        <img src="{{ speaker.excerptImages[0].thumbnails['900x1000.webp'] }}" alt="" class="img-fluid">
                    </a>
                </div>
                {% endif %}

                <div>
                    <h5 class="mb-1">
                        {{ speaker.excerptTitle }}
                    </h5>
                    
                    <small class="text-muted">{{ speaker.excerptMore }}</small>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
    </div>
</section>

<section class="position-relative bg-white text-dark" id="prijava">
    
