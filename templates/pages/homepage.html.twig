                            <i class="bx bx-x fs-3"></i>
                        </button>
                    </div>
                    <div class="modal-body  border-0">
                        {% set singleTicketForm = content.single_ticket %}
                        {% if singleTicketForm is defined %}
                            {% if app.request.get('send') != 'true' %}
                                {# FORM THEME #}
                                {% form_theme singleTicketForm '@SuluForm/themes/basic.html.twig' %}
                                {{ form_start(singleTicketForm) }}
                        
                                <div class="row d-flex">

                                    <div class="col-lg-12 col-sm-12 mb-2 d-flex flex-column flex-sm-row align-items-center gap-3">
                                        <label class="form-check-label text-dark" for="">Ako rezervišete kao firma, molimo Vas prevucite dugme da bi ste otključali polja za unos podataka firme.</label>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="isFirma">
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-sm-12 mb-2">
                                         <input type="text" class="form-control form-control-sm mb-2" 
                                         placeholder="{{ field_label(singleTicketForm.company)}}"
                                         value="{{ field_value(singleTicketForm.company)}}"
                                         name="{{ field_name(singleTicketForm.company)}}"
                                         id="nazivFirme"
                                         disabled=""
                                         >
                                    </div>
                        
                                    <div class="col-lg-6 col-sm-12 mb-2">
                                         <input type="text" class="form-control form-control-sm mb-2" 
                                         placeholder="{{ field_label(singleTicketForm.text)}}"
                                         value="{{ field_value(singleTicketForm.text)}}"
                                         name="{{ field_name(singleTicketForm.text)}}"
                                         id="pibFirme"
                                         disabled=""
                                         >
                                    </div>

                                    <div class="col-lg-6 col-sm-12 mb-2">
                                        <input type="text" class="form-control form-control-sm mb-2" 
                                         placeholder="{{ field_label(singleTicketForm.text2)}}*"
                                         value="{{ field_value(singleTicketForm.text2)}}"
                                         name="{{ field_name(singleTicketForm.text2)}}"
                                         >
                                    </div>

                                    <div class="col-lg-6 col-sm-12 mb-2">
                                        <input type="email" class="form-control form-control-sm mb-2" 
                                         placeholder="{{ field_label(singleTicketForm.email)}}*"
                                         value="{{ field_value(singleTicketForm.email)}}"
                                         name="{{ field_name(singleTicketForm.email)}}"
                                         >
                                    </div>

                                    <div class="col-lg-6 col-sm-12 mb-2">
                                        <input type="phone" class="form-control form-control-sm mb-2" 
                                         placeholder="{{ field_label(singleTicketForm.phone1)}}*"
                                         value="{{ field_value(singleTicketForm.phone1)}}"
                                         name="{{ field_name(singleTicketForm.phone1)}}"
                                         >
                                    </div>

                                    <div class="col-lg-6 col-sm-12 mb-2">
                                        <select name="{{ field_name(singleTicketForm.dropdown) }}" class="form-select form-select-sm mb-2">
                                            <option disabled="" selected="{{ field_label(singleTicketForm.dropdown) }}">{{ field_label(singleTicketForm.dropdown) }}*</option>
                                        
                                            {% for label, value in field_choices(singleTicketForm.dropdown) %}
                                                <option value="{{ value }}">{{ label }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="col-lg-6 col-sm-12 mb-2">
                                        <input type="phone" class="form-control form-control-sm mb-2" 
                                         placeholder="{{ field_label(singleTicketForm.city)}}*"
                                         value="{{ field_value(singleTicketForm.city)}}"
                                         name="{{ field_name(singleTicketForm.city)}}"
                                         >
                                    </div>

                                    <div class="col-lg-4 col-sm-12 mb-2">
                                        <input type="phone" class="form-control form-control-sm mb-2" 
                                         placeholder="{{ field_label(singleTicketForm.text1)}}*"
                                         value="{{ field_value(singleTicketForm.text1)}}"
                                         name="{{ field_name(singleTicketForm.text1)}}"
                                         >
                                    </div>

                                    <div class="col-lg-2 col-sm-12 mb-2">
                                        <input type="phone" class="form-control form-control-sm mb-2" 
                                         placeholder="{{ field_label(singleTicketForm.zip)}}*"
                                         value="{{ field_value(singleTicketForm.zip)}}"
                                         name="{{ field_name(singleTicketForm.zip)}}"
                                         >
                                    </div>


                                </div>

                                <div class="modal-footer bg-light border-0">
                                    <button type="button" class="btn btn-gray-200 btn-sm" data-bs-dismiss="modal">Close</button>
                                    <button type="{{ field_name(singleTicketForm.submit) }}" class="btn btn-secondary btn-sm">{{ field_label(singleTicketForm.submit) }}</button>
                                </div>

                        
                        
                                {{ form_end(singleTicketForm)}}
 
                            {% endif %}
                                
                        {% endif %}
                    </div> 
                </div>
            </div>
    </div>
</section>

