{% extends "base.html.twig" %}

{% block content %}

<section class="position-relative text-white overflow-hidden jarallax" >
    <!--Parallax image-->
    <img src="{{asset('assets/img/background/background3.jpg')}}" class="jarallax-img opacity-100" alt="">
    <div class="position-absolute w-100 h-100 bg-gradient-dark start-0 top-0"></div>
    <div class="container position-relative z-index-1">
        <div class="row vh-100 align-items-center">
            <div class="col-lg-12 col-xl-12 text-center">
                <h1 class="text-white my-4 display-2 text-uppercase " data-aos="fade-up" data-aos-duration="800">
                    Business <span class="text-danger">&</span> Digital <br> Transformation Conference
                </h1>
                <p class="text-white" data-aos="fade-up" data-aos-duration="1000">
                    EDUKATIVNI CENTAR NOVI SAD<br> INDUSTRIJSKA BB
                </p>
                <p class="text-white mb-5 mb-lg-7" data-aos="fade-up" data-aos-duration="1200">NOVEMBAR 02, 2023</p>

                <div id="countdown" class="row">
                  
                  
                    <div class="col-6 col-sm-4 col-lg-3 py-2 px-lg-5 d-flex flex-column align-items-center" data-aos="fade-right" data-aos-duration="1000">
                      <span id="days" class=" lead text-white fs-5">Days</span>
                      <span id="days-value" class="text-white display-5"></span>
                    </div>

                    <div class="col-6 col-sm-4 col-lg-3 py-2 px-lg-5 d-flex flex-column align-items-center" data-aos="fade-up" data-aos-duration="1000"> 
                      <span id="hours" class="lead text-white fs-5">Hours</span>
                      <span id="hours-value" class="text-white display-5"></span>
                    </div>


                    <div class="col-6 col-sm-4 col-lg-3 py-2 px-lg-5 d-flex flex-column align-items-center" data-aos="fade-up" data-aos-duration="1000">
                        <span id="minutes" class="lead text-light fs-5">Minutes</span>
                        <span id="minutes-value" class="text-white display-5"></span>
                    </div>

                    <div class="col-6 col-sm-4 col-lg-3 py-2 px-lg-5 d-flex flex-column align-items-center" data-aos="fade-left" data-aos-duration="1000">
                        <span id="seconds" class="lead text-white fs-5">Seconds</span>
                        <span id="seconds-value" class="text-white display-5"></span>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<section class="position-relative overflow-hidden jarallax" id="konferencija">
    <img src="{{asset('assets/img/background/qwerty.png')}}" class="jarallax-img opacity-25 w-25 position-absolute top-50 translate-middle-y  start-0" alt="">
    <div class="container py-9 py-lg-11 z-index-1 position-relative">
        <div class="row mb-6 mb-lg-6 justify-content-between align-items-end">
            <div class="col-lg-10 col-xl-8 mx-auto text-center">
                <!--begin:Subheading-->
                <div class="mb-3" data-aos="fade-up">
                    <span class="h6 text-muted">DigiTrans Conference</span>
                </div>
                <!--end:subheading-->

                <!--begin:Section Heading-->
                <h2 class="display-5 mb-0 text-gradient" data-aos="fade-up">
                    Saznajte više o našoj konferenciji
                </h2>
                <!--end:heading-->
            </div>
        </div>

        <div class="row mb-9 mb-lg-11">
            <div class="col-lg-8 col-12 mx-auto">

                <div class="accordion accordion-custom" id="accordionBlock">
                    <!--accordion item-->
                {% for accordionItem in content.accordion_block %}
                    {% set uniqueId = 'accordionItem_' ~ loop.index %}
                    <div class="accordion-item mb-3" data-aos="fade-up">
                         <!--accordion header-->
                        <h2 class="accordion-header" id="{{ uniqueId }}">
                            <button class="accordion-button {{ loop.first ? '' : 'collapsed'}}" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapse{{ uniqueId }}" aria-expanded="{{ loop.first ? ' true' : 'false'}}"
                                aria-controls="collapse{{ uniqueId }}">
                                {{ accordionItem.accordion_headline }}
                            </button>
                        </h2>
                         <!--accordion detail-->
                        <div id="collapse{{ uniqueId }}" class="accordion-collapse collapse {{loop.first ? ' show' : '' }}"
                            aria-labelledby="{{ uniqueId }}" data-bs-parent="#accordionBlock">
                            <div class="accordion-body">
                                {{accordionItem.accordion_description|raw}}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        <div>
    </div>
</section>

<section id="agenda" class="position-relative">
    <div class="container pt-0 pt-lg-0 py-9 z-index-1 position-relative overflow-hidden">
        <!--Triangle shape-->
        <div data-rellax-speed="2" data-rellax-percentage=".9"
            class="position-absolute start-0 top-0 ms-3 mt-3 mt-lg-7 ms-lg-9 text-success rellax">
            <svg class="" width="36" height="36" viewBox="0 0 104 104" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path d="M8.64453 8.64453L92.2962 31.0589L31.0589 92.2962L8.64453 8.64453Z"
                    stroke="currentColor" stroke-width="8"></path>
            </svg>
        </div>

        <div data-rellax-speed="-2" data-rellax-percentage=".9"
            class="position-absolute end-0 bottom-50 mb-3 me-3 me-lg-9 mb-lg-9 text-warning rellax">
            <svg class="" width="36" height="36" viewBox="0 0 108 108" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <circle cx="54" cy="54" r="50" stroke="currentColor" stroke-width="8"></circle>
            </svg>
            </svg>
        </div>

        <div class="row mb-5 mb-lg-15">
            <div class="col-md-12 mx-auto">
                <h2 class="mb-7 mb-lg-9 text-center display-4" data-aos="fade-up">Teme konferencije <span class="text-danger">&</span> Agenda</h2>
                <div class="row">
                    <div class="col-xl-7 col-md-10 col-lg-8 mx-auto position-relative">
                        <div class="swiper pb-9 swiperFaqs position-relative bg-transparent">
                            <div class="swiper-wrapper">
                            {% for themeItem in content.conference_theme_block %}
                                <div class="swiper-slide py-7 py-lg-9 px-4 px-lg-5 bg-white text-dark shadow-lg rounded-4 border border-secondary">
                                    <h5 class="mb-3 fw-bold text-success">{{ themeItem.theme_headline }}</h5>
                                    <hr>
                                    <div class="mb-0">
                                        {{ themeItem.theme_description|raw }}
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                            <div class="swiper-pagination text-info"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-5 mb-5 mb-lg-0">
                <h5 class="mb-4 text-success" data-aos="fade-up">Agenda</h5>
                <h2 class="display-3 text-capitalize mb-6" data-aos="fade-up">Raspored & Agenda</h2>
                <!--Schedule tabs-->
                <div class="nav nav-pills  flex-column justify-content-center" id="myTab" role="tablist" data-aos="fade-up" >
                    <button class="nav-link px-4 active text-start mb-3" id="d1-tab" data-bs-toggle="tab"
                        data-bs-target="#day1" type="button" role="tab" aria-controls="day1"
                        aria-selected="true">
                        <span class="d-block fs-5 fw-bold">Voditelj: Lale Marković - Tag Media</span>
                        <span class="small">Četvrtak, Novembar 2, 2023</span>
                    </button>
                </div>
            </div>
            <div class="col-lg-7 col-xl-6 ms-xl-auto">
                <div data-aos="fade-up" class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="day1" role="tabpanel"
                        aria-labelledby="d1-tab">
                        <ul class="pt-4 list-unstyled mb-0">
                        {% for agendaItem in content.agenda_block %}
                            <li class="d-flex flex-column flex-md-row py-4">
                                <span class="flex-shrink-0 width-13x me-md-4 d-block mb-3 mb-md-0 small text-muted">{{ agendaItem.agenda_start_time|date('H:i') }} - {{ agendaItem.agenda_end_time|date('H:i') }} </span>
                                <div class="flex-grow-1 ps-4 border-start border-3">
                                    <h5 class="text-muted">{{ agendaItem.agenda_headline }}</h5>
                                    <div class="mb-0">
                                        {{ agendaItem.agenda_description|raw }}
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="position-relative" id="predavaci">
